{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":semanticCommits",
    ":disableDependencyDashboard",
    ":automergeMinor",
    ":automergeDigest",
    ":separateMultipleMajorReleases"
  ],

  "timezone": "Asia/Tokyo",
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "assigneesFromCodeOwners": true,
  "labels": ["CI/CD ğŸ”"],

  "enabledManagers": ["github-actions", "mise", "custom.regex"],
  "packageRules": [
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions"
    },
    {
      "groupName": "chezmoi",
      "matchManagers": ["custom.regex"],
      "addLabels": ["Deps ğŸ“¦ï¸", "chezmoi ğŸ˜ï¸"],
      "matchUpdateTypes": ["minor", "patch", "digest"]
    },
    {
      "groupName": "mise",
      "matchManagers": ["mise"],
      "addLabels": ["Deps ğŸ“¦ï¸", "mise âš™ï¸"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "minimumReleaseAge": "2 days"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": ["Update Chezmoi version"],
      "managerFilePatterns": ["^home/.chezmoiversion$"],
      "matchStrings": ["(?<currentValue>.*)\\s"],
      "depNameTemplate": "twpayne/chezmoi",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.*)$",
      "versioningTemplate": "semver"
    }
  ],
  "mise": {
    "managerFilePatterns": [ "^home/dot_config/mise/config\\.toml\\.tmpl$" ]
  }
}
