{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard",
    "mergeConfidence:all-badges"
  ],
  "automerge": true,
  "ignoreTests": true,
  "timezone": "Asia/Tokyo",
  "ignorePresets": [ ":prHourlyLimit2", ":prConcurrentLimit10" ],
  "major": { "minimumReleaseAge": "7 days" },
  "minor": { "minimumReleaseAge": "3 days" },
  "patch": { "minimumReleaseAge": "2 days" },
  "packageRules": [
    {
      "description": "Don't pin official action digests",
      "pinDigests": false,
      "matchPackageNames": [ "actions/{/,}**" ]
    },
    {
      "description": "Schedule digest updates weekly",
      "matchUpdateTypes": [ "digest" ],
      "schedule": [ "every 7 day" ],
      "matchPackageNames": [ "!actions/{/,}**" ]
    }
  ]
}
