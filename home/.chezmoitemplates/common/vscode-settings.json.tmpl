// -*-mode:jsonc-*- vim:ft=jsonc.gotexttmpl
{
  // Appearance
  "workbench.colorTheme": "Dracula",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  // File
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    // VCS
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    // Shell
    "**/.bash_sessions": true,
    // History
    "**/.*_history": true,
    "**/.lesshst": true,
    "**/.wget-hsts": true,
    "**/.viminfo": true,
    // IDE
    "**/.project": true,
    "**/.vscode": true,
    "**/.idea": true,
    "**/.cache": true,
    "**/.gradle": true,
    // C#
    "**/.classpath": true,
    "**/.factorypath": true,
    // node.js
    "**/node_modules": true,
    "**/.yarn": true,
    "**/.pnpm": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/pnpm-lock.yaml": true,
    "**/.next": true,
    "**/.nuxt": true,
    // Python
    "**/*.pyc": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.ipynb_checkpoints": true,
    // Ruby
    "**/vendors": true,
    // Test & Bduild
    "**/build": true,
    "**/coverage": true,
    // macOS
    "**/.CFUserTextEncoding": true,
    "**/.DS_Store": true,
    "**/.localized": true,
    "**/.Trash*": true,
    // Linux
    // Windows
    "**/Thumbs.db": true,
    "**/desktop.ini": true
  },
  "scm.alwaysShowActions": true,
  "editor.quickSuggestions": {
    "comments": false,
    "strings": false,
    "other": true
  },
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.fontFamily": "'{{ .font.family.ascii }}', '{{ .font.family.combined }}', '{{ .font.family.nonascii }}'",
  "editor.fontSize": {{ .font.size.medium }},
  "editor.fontLigatures": true,
  "editor.wordSeparators": "~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?、。",
  "search.exclude": {
    // VCS
    "**/.git": true,
    "**/.github": true,
    // node.js
    "**/node_modules": true,
    "**/.yarn": true,
    "**/.pnpm": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/pnpm-lock.yaml": true,
    "**/.next": true,
    "**/.nuxt": true,
    "**/dist/**": true,
    "**/tmp": true,
    "**/logs": true,
  },
  // NeoVim
  "vscode-neovim.neovimExecutablePaths.darwin": "{{ .brew_prefix }}/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim/init.lua",
  "vscode-neovim.neovimExecutablePaths.linux": "{{ .brew_prefix }}/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.linux": "~/.config/nvim/init.lua",
  // Docker
  "docker.showStartPage": false,
  "remote.containers.defaultExtensions": [
    "alefragnani.numbered-bookmarks",
    "EditorConfig.EditorConfig"
  ],
  "remote.SSH.configFile": "~/.ssh/config",
  "remote.SSH.connectTimeout": 300,
  "remote.SSH.showLoginTerminal": true,
  "remote.SSH.defaultExtensions": [
    "alefragnani.numbered-bookmarks",
    "EditorConfig.EditorConfig"
  ],
  "remote.WSL.debug": true,
  "remote.WSL.fileWatcher.polling": true,
  // Language specific settings
  "[c][cpp]": {
    "editor.wordBasedSuggestions": "off",
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true
  },
  "[rust]": {
    "editor.tabSize": 4
  },
  "go.buildOnSave": "workspace",
  "[go][go.mod]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.tabSize": 4
  },
  "[lua]": {
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace"
  },
  "json.schemaDownload.enable": true,
  "[javascript][javascriptreact][typescript][typescriptreact]": {
    "editor.maxTokenizationLineLength": 2500
  },
  "python.languageserver": "Pylance",
  "python.showStartPage": false,
  "python.venvPath": ".venv",
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.suggestSelection": "first",
    "editor.tabSize": 4
  },
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "[ruby]": {
    "editor.tabSize": 2
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "diffEditor.ignoreTrimWhitespace": false
  },
  "[markdown]": {
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "update.mode": "manual",
  "extensions.autoUpdate": false,
  "settingsSync.ignoredSettings": [],
  // dotfiles
  "dotfiles.repository": "~/.local/share/chezmoi",
  "dotfiles.targetPath": "~/dotfiles",
  "dotfiles.installCommand": "~/.local/share/chezmoi/install.sh",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  }
}
