# -*-mode:gitconfig-*- vim:ft=gitconfig

[include]
  path = conf.d/alias.conf
  path = conf.d/delta.conf
  path = conf.d/lfs.conf
  path = conf.d/gist.conf
  path = conf.d/user.conf

[core]
  editor       = nvim
	excludesfile = ${XDG_CONFIG_HOME}/git/ignore

[color]
  ui = true
  diff = auto
  status = auto
  branch = auto

[init]
	defaultBranch = main

[branch]
  autosetuprebase = always

[merge]
  branchdesc = true
  log = true
