# -*-mode:gitconfig-*- vim:ft=gitconfig

[include]
  path = conf/alias.conf
  path = conf/delta.conf
  path = conf/lfs.conf
  path = conf/gist.conf
  path = conf/user.conf

[core]
  editor       = nvim
	excludesfile = ${XDG_CONFIG_HOME}/git/ignore

[color]
  ui = true
  diff = auto
  status = auto
  branch = auto

[init]
	defaultBranch = main

[branch]
  autosetuprebase = always

[merge]
  branchdesc = true
  log = true
