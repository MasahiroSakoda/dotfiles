{{- /*
// -*-mode:kdl-*- vim:ft=kdl.gotexttmpl
*/ -}}
// -*-mode:kdl-*- vim:ft=kdl

layout {
  default_tab_template {
    children

    pane size=1 borderless=true {
      {{ includeTemplate "common/zellij-status.kdl.tmpl" . }}
    }
  }

  tab split_direction="vertical" {
    pane borderless=true split_direction="horizontal" {
      command "nvim"
      focus true
      size "75%"
      start_suspended false
    }
    pane split_direction="horizontal" {
      pane {
        size "60%"
        focus true
        command "pnpm"
        args "run" "dev"
        start_suspended true
      }
      pane size="40%"
    }
  }

}
