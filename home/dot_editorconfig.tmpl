# -*-mode:toml-*- vim:ft=toml.gotexttmpl
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown
[*.{md}]
indent_style = space
indent_size  = 2

# Shell Script
[*.{sh,zsh,fish,fish.symlink}]
indent_style = space
indent_size  = 2

# Nushell
[*.{nu}]
indent_style = space
indent_size  = 4
insert_final_newline     = false
trim_trailing_whitespace = true

# Makefile
[{Makefile}]
indent_style = tab
indent_size  = 4

# Taskfile
[Taskfile.{yml,yaml}]
indent_size  = 2
indent_style = space

# C/C++, Rust
[*.{c,cc,cpp,h,hpp,rs}]
indent_style = space
indent_size  = 4
tab_width    = 4

# Shader Languages
[*.{glsl,frag,vert,geom,comp,tese,tesc,metal}]
indent_style = space
indent_size  = 4
tab_width    = 4

# Go
[*.{go}]
indent_style = tab
indent_size  = 4

# Java, Scala, Kotlin, Clojure
[*.{java,scala,kt,clj}]
indent_style = tab
indent_size  = 4

# JavaScript / Typescript
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size  = 2

# Lua
[*.{lua}]
indent_style = space
indent_size  = 2

# Python
[*.{py,pyw}]
indent_style = space
indent_size  = 4

# Ruby
[*.{rb,rbi,rbw,ru,gemspec,jbuilder,erb,slim,haml,Gemfile{,.lock},Rakefile,Guradfile,Brewfile,Caskfile,Masfile}]
indent_style = space
indent_size  = 2

# TOML
[*.{toml}]
indent_style = space
indent_size  = 2

# JSON & YAML
[*.{json,y{a,}ml}]
indent_size  = 2
indent_style = space

# KDL
[*.{kdl}]
indent_size  = 4
indent_style = space

# HTML & CSS
[*.{html,css,scss}]
indent_style = space
indent_size  = 2
tab_width    = 2

# TeX
[*.{tex,bib}]
indent_style = space
indent_size  = 2
