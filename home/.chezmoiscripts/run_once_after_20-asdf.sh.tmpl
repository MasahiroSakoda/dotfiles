#!/usr/bin/env bash
# -*-mode:sh-*- vim:ft=sh

set -eo pipefail

{{ template "common/script_eval_brew" . }}

PLUGINS="python ruby nodejs deno"

# TODO: install from ~/.tool-versions

echo $(brew info asdf)

. "$(brew --prefix asdf)/libexec/asdf.sh"
exec $SHELL -l

for PLUGIN in ${PLUGINS}; do
  # Install asdf plugin
  if asdf plugin-list | rg ${PLUGIN} >/dev/null; then
    echo "asdf plugin \"${PLUGIN}\" is already installed"
  else
    adsf plugin-add ${PLUGIN}

    # Install latest version
    asdf install ${PLUGIN} latest
    asdf global ${PLUGIN}
    asdf reshim ${PLUGIN}

    echo "${PLUGIN} installed to $(which ${PLUGIN})"
  fi
done

adsf reshim
adsf current
