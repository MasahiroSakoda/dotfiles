{
  {{- /* https://geminicli.com/docs/get-started/configuration/ */}}
  {{/* Tool Settings */ -}}
  "tools": {
    "autoAccept": false,
    "core": [
      "LSTool",
      "GlobTool",
      "GrepTool",
      "ReadFileTool",
      "WriteFileTool",
      "EditTool",
      "FindFilesTool",
      "SearchTextTool",
      "ReadFolderTool",
      "ShellTool",
      "GoogleSearchTool",
      "WebFetchTool",
      "SaveMemoryTool"
    ],
    "exclude": [
      "run_shell_command(rm -rf)"
    ],
  {{/* Sandbox Settings */ -}}
  "sandbox": false
  },
  {{/* General Settings */ -}}
  "general": {
    "checkpointing": {
      "enabled": true
    },
    "disableAutoUpdate": true,
    "preferredEditor": "neovim",
    "vimMode": false,
    "previewFeatures": true
  },
  "context": {
    "fileName": [
      "GEMINI.md",
      "AGENTS.md"
    ],
    {{/* File Filter Settings */ -}}
    "fileFiltering": {
      "respectGitIgnore": true,
      "enableRecursiveFileSearch": true
    }
  },
  {{/* Model Config */ -}}
  "model": {
    "name": "auto-gemini-3"
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "ui": {
    "theme": "GitHub"
  },
  "privacy": {
    "usageStatisticsEnabled": false
  },
  {{/* Telemetry */ -}}
  "telemetry": {
    "enabled": false,
    "target": "local",
    "otlpEndpoint": "http://localhost:4317",
    "logPrompts": true
  },
  {{/* MCP Servers */ -}}
  {{ $servers := dict }}
  {{- range $key, $value := .mcp.providers -}}
  {{-   if hasKey $value "type" -}}
  {{-     $_ := $value | deleteValueAtPath "type" -}}
  {{-   end -}}
  {{-   if hasKey $value "enabled" -}}
  {{-     $_ := $value | deleteValueAtPath "enabled" -}}
  {{-   end -}}
  {{-   if hasKey $value "oauth" -}}
  {{-     $_ := $value | deleteValueAtPath "oauth" -}}
  {{-   end -}}
  {{-   $_ := $servers | setValueAtPath $key $value -}}
  {{- end -}}
  "mcpServers": {{ $servers | toPrettyJson | indent 2 | trim }}
}
