# -*-mode:conf-toml-*- vim:ft=toml
# file: home/.chezmoi.toml.tmpl

{{- $osid := .chezmoi.os -}}
{{ $computer := promptStringOnce "computer type home/work" (default: home) -}}

encryption = "age"
format = "json"
color = "on"

[data]
    osid = {{ $osid | quote }}

[data.git]
    name  = {{ promptStringOnce "Enter your git username:" (default (env GIT_USERNAME)) }}
    email = {{ promptStringOnce "Enter your git email address:" (default (env GIT_EMAIL)) }}

[edit]
    command = "nvim"
    apply = false

[diff]
    format = "git"
    pager = "delta"

[merge]
    command = "nvim"
    args = "-d"

[age]
    identity  = "~/key.txt"
