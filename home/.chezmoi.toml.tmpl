# -*-mode:conf-toml-*- vim:ft=toml
# file: home/.chezmoi.toml.tmpl

{{- $osid := .chezmoi.os -}}

{{- $git_user  := (env GIT_USERNAME) -}}
{{- $git_email := (env GIT_EMAIL) -}}

{{- if stdinIsATTY -}}
{{- $git_user  := promptStringOnce "Enter your git username: " -}}
{{- $git_email := promptStringOnce "Enter your git email: " -}}
{{- end -}}

encryption = "age"
format = "json"
color = "on"

[data]
    osid = {{ $osid | quote }}

[data.git]
    name  = {{ $git_user | quote }}
    email = {{ $git_email | quote }}

[edit]
    command = "nvim"
    apply = false

[diff]
    format = "git"
    pager = "delta"

[merge]
    command = "nvim"
    args = "-d"

[age]
    identity  = "~/key.txt"
    recipient = "age1ta9k8zuu93qfz8dpea8umdf7kfafr3ggl2uze33qn60xu2rx83uqupj22t"
